.foot
  .inner
    padding: 1em
  color: #999
  .title
    font-size: 2em
    line-height: 1.5em
    font-weight: 700
    display: none
  .desc
    display: none
  .group
    max-width: 200px
  .groups
    display: flex
    flex-wrap: wrap
    justify-content: center
  .label
    padding-left: 2em
    margin: 1em 0
  background: #111213
  width: 100%
  min-height: 300px
  line-height: 1.25em
  font-family: sans-serif
  .roles
    display: flex
    flex-wrap: wrap
    margin-top: 1em
  .role
    display: inline-block
    display: flex
    align-items: center
    margin: 0 2em .5em 0
  .avatar
    width: 1.25em
    height: 1.25em
    margin-right: .5em
    background: #fff
    border-radius: 50%
    display: inline-block
    background-size: cover
    background-position: center center
    background-repeat: no-repeat
  .group.lg
    max-width: 100%
    .role
      flex-direction: column
    .avatar
      width: 180px
      height: 120px
      border-radius: 10px
      background-size: contain
      margin-bottom: .5em

  .name
    display: inline-block
  a
    color: #f11
    text-decoration: none
    font-weight: 200
